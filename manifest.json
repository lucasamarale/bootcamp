{
  "manifest_version": 3,
  "name": "Task Manager",
  "version": "2.0.0",
  "description": "Uma extensão para organizar tarefas e salvá-las no Google Agenda.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Task Manager",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ]
}
